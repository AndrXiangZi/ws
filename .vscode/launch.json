{
  "version": "0.2.0",
  "configurations": [
    // https://pub.dev/packages/test
    {
      "name": "Run WebSocket Test",
      "request": "launch",
      "type": "dart",
      "program": "test",
      "env": {
        "ENVIRONMENT": "test"
      },
      "console": "debugConsole",
      "runTestsOnDevice": false,
      "templateFor": "test",
      "toolArgs": [
        "--color",
        "--debug",
        "--coverage=.coverage",
        "--reporter=expanded",
        "--platform=chrome,vm",
        "--file-reporter=json:.coverage/tests.json",
        "--timeout=30s",
        "--concurrency=12"
      ],
      "args": []
    }
  ]
}
